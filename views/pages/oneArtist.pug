html(lang='en')
    head
        title #{list[0].artist}
        link(rel="stylesheet" href="/css/oneArtwork.css")
    body(id=user.username)
        header 
            a(href="/logIn/" + user.username) Homepage
            a.active(href= "/" + user.username + "/art") All Artworks
            div#search
                input#searchText(type="text" placeholder="Search.." onkeyup = "enableButton()")
                button#searchButton(type="button" disabled onclick="searchButton()") Submit
        h2 All artworks by #{list[0].artist}
        div.main(id = user.username)
            each item in list 
                h4 Name: #{item.name}
                a(href= "/" + user.username + "/art/" + item._id)
                    img(src=item.image) 
                p Category: #{item.category}
                p Medium: #{item.medium}
                p Description: #{item.description}
            button(type="button" id=list[0].artist onclick="followArtist()") follow
        br
        .work(id = user.username)
            h3 Workshops created by #{list[0].artist} 
            if work.length > 0
                each item in work
                    a(href= "/" + user.username + "/workshop/" + item.title) #{item.title} 
                    button(type="button" id=item.title onclick="enrollWorkshop()") enroll
                    br
                    br
        script(src="/oneArtist.js")

