html(lang='en')
  head
    title #{list.name}
    link(rel="stylesheet" href="/css/oneArtwork.css")
  body(id=user.username)
    header 
      a(href="/logIn/" + user.username) Homepage
      a.active(href= "/" + user.username + "/art") All Artworks
      div#search
        input#searchText(type="text" placeholder="Search.." onkeyup = "enableButton()")
        button#searchButton(type="button" disabled onclick="searchButton()") Submit
    br
    h2 #{list.name}
    div.main
      p Artist: 
        a(href= "/" + user.username +  "/artist/" + list.artist) #{list.artist}
      p Year: #{list.year}
      p Medium: 
        a(href= "/" + user.username + "/art/search/medium/" + list.medium) #{list.medium}
      p Category: 
        a(href= "/" + user.username + "/art/search/category/" + list.category) #{list.category}
      img(src=list.image) 
      p.des Description: #{list.description} 
      p the number of likes: #{like.numLikes}
      div#res
        p Reviews:
        ul 
          each item in reviewed
            li #{item}
      br
      button(type="button" id=list._id onclick="likeArt()") Like
      button(type="button" id=list._id onclick="unfollowArt()") Follow
      input#review(type="text" placeholder= "Write a review...")
      button(type="button" id=list._id onclick="reviewed()") submit review 
    script(src="/oneArtwork.js")