html(lang='en')
  head
    title Add Artwork
    link(rel="stylesheet" href="/css/addStuff.css")
  body(id=user.username)
    header 
        a(href="/logIn/" + user.username) Homepage
        a(href= "/" + user.username + "/art") All Artworks
        a.active(href="/" + user.username + "/addArtwork") Add Artwork
        a(href="/" + user.username + "/addWorkshop") Add Workshop
        div#search
          input#searchText(type="text" placeholder="Search.." onkeyup = "enableButton()")
          button#searchButton(type="button" disabled onclick="searchButton()") Submit
    h2 Add an artwork
    label(for="name") Name of the artwork: 
    input#name(type="text")
    br
    br
    label(for="year") Year of the artwork: 
    input#year(type="text")
    br
    br
    label(for="category") Category of the artwork: 
    input#category(type="text")
    br
    br
    label(for="medium") Medium of the artwork: 
    input#medium(type="text")
    br
    br
    label(for="description") Description of the artwork: 
    input#description(type="text")
    br
    br
    label(for="image") Image URL of the artwork: 
    input#image(type="text")
    br
    br
    div#error 
    button(type="button" onclick="addArtwork()") Add Artwork
    script(src="/addArtwork.js")

