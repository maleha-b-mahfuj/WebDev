html(lang='en')
  head
    title Add Artwork
    link(rel="stylesheet" href="/css/addStuff.css")
  body(id=user.username)
    header 
        a(href="/logIn/" + user.username) Homepage
        a(href= "/" + user.username + "/art") All Artworks
        a(href="/" + user.username + "/addArtwork") Add Artwork
        a.active(href="/" + user.username + "/addWorkshop") Add Workshop
        div#search
          input#searchText(type="text" placeholder="Search.." onkeyup = "enableButton()")
          button#searchButton(type="button" disabled onclick="searchButton()") Submit
    h2 Add a workshop
    label(for="name") Title of the workshop: 
    input#title(type="text")
    br
    button(type="button" onclick="addWorkshop()") Add Workshop
    script(src="/addWorkshop.js")